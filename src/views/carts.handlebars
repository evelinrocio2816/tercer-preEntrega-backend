<h1>Carrito de Compras</h1>

<div class="container">
    {{#each products}}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Producto: {{this.product.title}}</h5>
            <p class="card-text">Cantidad: {{this.quantity}}</p>
            <p class="card-text">Precio: ${{this.product.totalPrice}}</p>
            <button onclick="deleteProduct('{{this.cartId}}', '{{this.product._id}}')"
                class="btn btn-danger">Eliminar</button>
        </div>
    </div>
    {{/each}}
</div>

<button onclick="emptyCart('{{cartId}}')" class="btn btn-danger">Vaciar Carrito</button>
<h3 class="mt-2">Total de la compra: ${{totalCompra}}</h3>

<div>
    <h3>CheckO Out</h3>
    <button onclick="finalizePurchase("{{cartId}}")">Finalizar compra</button>
</div>

 <script src="js/cart.js"></script>